</head>

<body class="govuk-template__body ">

<script>
  document.body.className = ((document.body.className) ? document.body.className + ' js-enabled' : 'js-enabled');

</script>

<a href="#main-content" class="govuk-skip-link" data-module="govuk-skip-link">Skip to main content</a>

<header class="govuk-header" role="banner" data-module="govuk-header">
    <div class="govuk-header__container govuk-width-container header-title-container">
        <div class="govuk-header__logo app-header__logo">
            <a href="/" class="govuk-header__link govuk-header__link--homepage">
              <span class="govuk-header__logotype">
                  <span class="govuk-header__logotype-text">
                  Open Regulation Platform
                </span>
              </span>
            </a>
        </div>

        <div id="user-block" class="govuk-!-padding-top-1 govuk-!-padding-bottom-1 govuk-!-font-size-16 govuk-!-font-weight-bold">
        <% if (locals?.user) { %>
                <div id="header-user-name" data-qa="header-user-name" class="govuk-!-padding-right-3 govuk-header__link">
                    <a data-qa="user-profile" class="govuk-header__link" href="/user"><%= user.email %></a>
                </div>
                <div class="govuk-!-padding-right-0 govuk-header__link">
                    <a data-qa="logout" class="govuk-header__link" href="/auth/logout">Sign out</a>
                </div>
        <% } else { %>
                <a data-qa="login" class="govuk-header__link"  href="/auth/login">Sign in</a>
        <% } %>
        </div>
    </div>
</header>
<div class="primary-navigation-container">
    <div class="govuk-width-container">
        <div class="primary-navigation__container">
            <div class="primary-navigation__nav">
                <nav class="primary-navigation" aria-label="Primary navigation">
                    <ul class="primary-navigation__list">
                        <li class="primary-navigation__item">
                            <a class="primary-navigation__link" aria-current="page" href="/search">Search</a>
                        </li>
                        <% if (locals?.user?.regulator) { %>
                            <li class="primary-navigation__item">
                                <a class="primary-navigation__link" href="/ingest">Upload</a>
                            </li>
                        <% }%>
                        <li class="primary-navigation__item">
                            <a class="primary-navigation__link" href="/blog">Blog</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
<div class="govuk-phase-banner govuk-width-container">
    <p class="govuk-phase-banner__content">
        <strong class="govuk-tag govuk-phase-banner__content__tag">
            beta
        </strong>
        <span class="govuk-phase-banner__text">
      This is a new service â€“ your <a class="govuk-link" href="mailto:openregulationplatform@beis.gov.uk">feedback</a> will help us to improve it.
    </span>
    </p>
</div>
