<%- include('../../partials/header'); %>

<div class="govuk-width-container">
    <main class="govuk-main-wrapper " id="main-content" role="main">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <span class="govuk-caption-l">Step 2 of 6</span>
                <h1 class="govuk-heading-l">Check your document</h1>

                <p>Please review the document shown below to ensure that you have selected the correct version. The document that you upload must match the version of the document available to the public on your organisations website.</p>

                <object class="embedded-pdf-small govuk-!-width-one-half" data="<%= locals.url %>" type="application/pdf" >
                    <embed src="<%= locals.url %>" type="application/pdf" />
                </object>

                <hr class="govuk-section-break govuk-section-break--m">

                <form method="post">
                    <input type="hidden" value="<%= locals.key %>" name="key" />
                    <div class="govuk-form-group <% if(locals?.errors?.confirm) { %>govuk-form-group--error<% } %>" >
                        <fieldset class="govuk-fieldset">
                            <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
                                <h2 class="govuk-fieldset__heading">
                                    Is this document correct?
                                </h2>
                            </legend>
                            <% if(locals?.errors?.confirm) { %>
                                <p id="confirm-error" class="govuk-error-message">
                                    <span class="govuk-visually-hidden">Error:</span> <%= locals?.errors?.confirm %>
                                </p>
                            <% } %>
                            <div class="govuk-radios" data-module="govuk-radios">
                                <div class="govuk-radios__item">
                                    <input class="govuk-radios__input" id="confirm-document" name="confirm" type="radio" value="yes">
                                    <label class="govuk-label govuk-radios__label" for="confirm-document">
                                        Yes, upload this file
                                    </label>
                                </div>
                                <div class="govuk-radios__item">
                                    <input class="govuk-radios__input" id="confirm-document-2" name="confirm" type="radio" value="no">
                                    <label class="govuk-label govuk-radios__label" for="confirm-document-2">
                                        No, I want to select a different file
                                    </label>
                                </div>
                            </div>
                        </fieldset>
                    </div>

                    <button type="submit" class="govuk-button" data-module="govuk-button">
                        Continue
                    </button>
                </form>
            </div>
        </div>
    </main>
</div>

<%- include('../../partials/footer'); %>
