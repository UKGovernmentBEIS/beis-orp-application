<form method="get">
    <div id="search-container" class="govuk-!-padding-top-3 govuk-!-padding-bottom-3 govuk-!-padding-left-2 govuk-!-padding-right-2">
        <div class="govuk-form-group">
            <h2 class="govuk-label-wrapper">
                <label class="govuk-label govuk-label--s" for="search-title">Search title</label>
            </h2>
            <div id="search-title-hint" class="govuk-hint govuk-!-font-size-16">Words contained in the document title</div>
            <input class="govuk-input" id="search-title" name="title" type="text" aria-describedby="search-title-hint" value="<%=titleValue%>"/>
        </div>
        <div class="govuk-form-group">
            <h2 class="govuk-label-wrapper">
                <label class="govuk-label govuk-label--s" for="search-keyword">Search keywords</label>
            </h2>
            <div id="search-keyword-hint" class="govuk-hint govuk-!-font-size-16">Keywords extracted from a document</div>
            <input class="govuk-input" id="search-keyword" name="keyword" type="text" aria-describedby="search-keyword-hint" value="<%=keywordValue%>" />
        </div>

        <button type="submit" class="govuk-button govuk-!-margin-bottom-0" data-module="govuk-button">
            Search
        </button>
    </div>
    <div id="filters-container" class="govuk-!-padding-top-6 govuk-!-padding-left-2">
        <h2 class="govuk-heading-s">Apply filters</h2>
        <%- include('./dateFilter'); %>
        <%- include('./regulatorFilter'); %>
        <%- include('./docTypesFilter'); %>
        <%- include('./statusFilter'); %>
    </div>
</form>
