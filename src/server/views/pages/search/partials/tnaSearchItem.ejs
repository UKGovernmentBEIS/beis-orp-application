<%
    var dateText = item.dates.published ?? null
    const date = new Date(dateText)
    const dateDay = date.getDate();
    const dateMonth = date.toLocaleString('default', {month: 'long'});
    const dateYear = date.getFullYear();
    const dateString = `${dateDay} ${dateMonth} ${dateYear}`
%>

<div class="search-result tna-search-result govuk-!-margin-bottom-2">
    <div class="search-result-top-panel vertical-align-right">
        <a href="<%= item.id %>" role="button" draggable="false" target="_blank" rel="noopener noreferrer">
            <img src="/assets/images/external-open-blue.svg" width="20" height="20" aria-label="view <%= item.title %> on National Archives" alt="view on National Archives" class="govuk-!-padding-2"/>
        </a>
    </div>
    <div class="govuk-!-padding-3">
        <h3>
            <a href="/document/linked-documents?id=<%= item.id %>&published=<%= dateString %>"><%= item.title %></a>
        </h3>
        <p class="search-result-info govuk-!-font-size-16">
            <span><%= item.legislationType %></span>
            <span><%= dateString %></span>
            <span><%= item.number %></span>
        </p>
    </div>
</div>
