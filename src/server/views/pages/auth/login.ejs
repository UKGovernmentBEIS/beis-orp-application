<%- include('../../partials/header'); %>

<div class="govuk-width-container">
    <% if(locals?.errors?.global) { %>
        <div class="govuk-error-summary" data-module="govuk-error-summary">
            <div role="alert">
                <div class="govuk-error-summary__body">
                    <ul class="govuk-list govuk-error-summary__list">
                        <%= locals?.errors?.global %>
                    </ul>
                </div>
            </div>
        </div>
    <% } %>
    <main class="govuk-main-wrapper " id="main-content" role="main">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <h1 class="govuk-heading-l">Sign in</h1>
                <p>Enter your Open Regulation Platform account details to sign in</p>

                <form method="post">
                    <div class="govuk-form-group <% if(locals?.errors?.email) { %>govuk-form-group--error<% } %>">
                        <h2 class="govuk-label-wrapper">
                            <label class="govuk-label govuk-label--s" for="email">Email address</label>
                        </h2>
                        <% if(locals?.errors?.email) { %>
                            <p id="email-error" class="govuk-error-message">
                                <%= locals?.errors?.email %>
                            </p>
                        <% } %>
                        <input class="govuk-input govuk-!-width-two-thirds" id="email" name="email" type="text" <% if(locals?.values?.email) { %>value="<%= locals?.values?.email %>" <% } %> />
                    </div>
                    <div class="govuk-form-group <% if(locals?.errors?.password) { %>govuk-form-group--error<% } %>">
                        <h2 class="govuk-label-wrapper">
                            <label class="govuk-label govuk-label--s" for="password">Password</label>
                        </h2>
                        <% if(locals?.errors?.password) { %>
                            <p id="password-error" class="govuk-error-message">
                                <%= locals?.errors?.password %>
                            </p>
                        <% } %>
                        <input class="govuk-input govuk-!-width-one-half" id="password" name="password" type="password" data-module="password-reveal" <% if(locals?.values?.password) { %>value="<%= locals?.values?.password %>" <% } %> />
                    </div>

                    <button type="submit" class="govuk-button govuk-!-margin-bottom-0" data-module="govuk-button">
                        Sign in
                    </button>
                </form>
            </div>
        </div>
    </main>
</div>

<%- include('../../partials/footer'); %>
