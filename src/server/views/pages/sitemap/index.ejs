<%- include('../../partials/header'); %>

<div class="govuk-width-container">
    <main class="govuk-main-wrapper " id="main-content" role="main">

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">

                <h1 class="govuk-heading-xl">Sitemap</h1>
                <% Object.keys(siteSections).forEach(section => { %>
                    <% if (typeof siteSections[section] === "string") { %>
                        <h2 class="govuk-heading-l">
                            <a class="govuk-link" href="<%= siteSections[section] %>"><%= section %></a>
                        </h2>
                    <% } else { %>
                        <h2 class="govuk-heading-l">
                            <%= section %>
                        </h2>
                        <ul class="govuk-list">
                            <% Object.keys(siteSections[section]).forEach(page => { %>
                                <li class="govuk-!-margin-bottom-2">
                                    <a class="govuk-link" href="<%= siteSections[section][page] %>"><%= page %></a>
                                </li>
                            <% }) %>
                        </ul>
                    <% } %>
                <% }) %>

            </div>
        </div>
    </main>
</div>

<%- include('../../partials/footer'); %>
