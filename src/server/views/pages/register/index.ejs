<%- include('../../partials/header'); %>

<%
    var errorMessages = {
        emailAddress: "Enter a valid email address",
        org: "Enter your organisation" ,
        job: "Enter your job"
    }

    var emailValue = locals.model ? locals.model.emailAddress : ""
    var emailError = locals.errors && locals.errors.emailAddress ? errorMessages.emailAddress : null
    var orgValue = locals.model ? locals.model.org : ""
    var orgError = locals.errors && locals.errors.org ? errorMessages.org : null
    var jobValue = locals.model ? locals.model.job : ""
    var jobError = locals.errors && locals.errors.job ? errorMessages.job : null
%>


<div class="govuk-width-container">
    <%- include('../../partials/components/backButton' , {href: "/blog"}); %>

    <% if (locals.mailchimpError) { %>
        <%- include('./partials/mailchimpError');%>
    <% } %>

    <main class="govuk-main-wrapper " id="main-content" role="main">
        <span class="govuk-caption-l">Blog</span>
        <h1 class="govuk-heading-l">Register your interest</h1>
        <p>Explanitory text about involvement in the ORP</p>

        <hr class="govuk-section-break govuk-section-break--l">

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <div id="mc_embed_signup">
                    <form style="position: relative;" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_self">
                        <div id="mc_embed_signup_scroll">

                            <div class="govuk-form-group <% if(emailError) { %>govuk-form-group--error<% } %>">
                                <h2 class="govuk-label-wrapper">
                                    <label class="govuk-label govuk-label--s" for="emailAddress">
                                       Your email address
                                    </label>
                                </h2>
                                <% if(emailError) { %>
                                    <p id="email-error" class="govuk-error-message">
                                        <%= emailError %>
                                    </p>
                                <% } %>
                                <input class="govuk-input govuk-!-width-two-thirds <% if(emailError) { %>govuk-input--error<% } %>" id="emailAddress" name="emailAddress" type="email" autocomplete="email" <% if(emailValue) { %>value="<%= emailValue %>" <% } %> />
                            </div>

                            <div class="govuk-form-group <% if(orgError) { %>govuk-form-group--error<% } %>">
                                <h2 class="govuk-label-wrapper">
                                    <label class="govuk-label govuk-label--s" for="org">
                                        Your organisation
                                    </label>
                                </h2>
                                <% if(orgError) { %>
                                    <p id="org-error" class="govuk-error-message">
                                        <%= orgError %>
                                    </p>
                                <% } %>
                                <input class="govuk-input govuk-!-width-two-thirds <% if(orgError) { %>govuk-input--error<% } %>" id="org" name="org" type="text" <% if(orgValue) { %>value="<%= orgValue %>" <% } %> />
                            </div>

                            <div class="govuk-form-group <% if(jobError) { %>govuk-form-group--error<% } %>">
                                <h2 class="govuk-label-wrapper">
                                    <label class="govuk-label govuk-label--s" for="job">
                                        Your job title
                                    </label>
                                </h2>
                                <% if(jobError) { %>
                                    <p id="job-error" class="govuk-error-message">
                                        <%= jobError %>
                                    </p>
                                <% } %>
                                <input class="govuk-input govuk-!-width-two-thirds <% if(jobError) { %>govuk-input--error<% } %>" id="job" name="job" type="text" <% if(jobValue) { %>value="<%= jobValue %>" <% } %> />
                            </div>

                            <div id="mce-responses" class="clear foot">
                                <div class="response" id="mce-error-response" style="display:none"></div>
                                <div class="response" id="mce-success-response" style="display:none"></div>
                            </div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                            <div class="mockItem" aria-hidden="true"><input type="text" name="b_421d6e3d31b5a15d8560c613d_d8234fcc62" tabindex="-1" value=""></div>
                            <button id="mc-embedded-subscribe" type="submit" class="govuk-button" data-module="govuk-button">
                                Submit
                            </button>
                        </div>
                    </form>
                </div>
                <div class="govuk-inset-text">
                    Please read our <a href="/privacy" class="govuk-link">privacy notice</a> to see how we handle your information.
                </div>
            </div>

            <%- include('../../partials/aboutSidebar', {excludeRegister: true}); %>
        </div>
    </main>
</div>

<%- include('../../partials/footer'); %>
